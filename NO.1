#include <iostream>
#include <algorithm>

using namespace std;

// Fungsi untuk Selection Sort
void selectionSort(int arr[], string names[], int n) {
    for (int i = 0; i < n - 1; i++) {
        int minIndex = i;
        for (int j = i + 1; j < n; j++) {
            if (arr[j] < arr[minIndex])
                minIndex = j;
        }
        swap(arr[i], arr[minIndex]);
        swap(names[i], names[minIndex]);
    }
}

// Fungsi untuk Binary Search
int binarySearch(int arr[], int n, int target) {
    int left = 0, right = n - 1;
    while (left <= right) {
        int mid = left + (right - left) / 2;
        if (arr[mid] == target)
            return mid;
        else if (arr[mid] < target)
            left = mid + 1;
        else
            right = mid - 1;
    }
    return -1;
}

int main() {
    int prices[] = {20000, 50000, 15000, 30000, 45000};
    string products[] = {"Mouse", "Keyboard", "Cable", "Charger", "USB"};
    int n = sizeof(prices) / sizeof(prices[0]);

    // Sorting harga produk
    selectionSort(prices, products, n);
    cout << "Produk setelah diurutkan berdasarkan harga:\n";
    for (int i = 0; i < n; i++) {
        cout << products[i] << " - Rp" << prices[i] << endl;
    }

    // Mencari produk berdasarkan harga
    int targetPrice;
    cout << "Masukkan harga yang ingin dicari: ";
    cin >> targetPrice;
    int result = binarySearch(prices, n, targetPrice);
    if (result != -1)
        cout << "Produk dengan harga Rp" << targetPrice << " adalah " << products[result] << endl;
    else
        cout << "Tidak ada produk dengan harga tersebut." << endl;

    return 0;
}
